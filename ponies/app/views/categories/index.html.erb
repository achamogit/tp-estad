<% title "Categories" %>



<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>
<p class="label label-info blink_me">Find me in ...</p>


<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.created_at %></td>
        
        <td>

          <%= link_to category_path(category), :class =>"ib" do %>
             <%= image_tag "listar.png", class: "ib sensor" %>
          <% end %>
        
        </td>
        <td>
        
          <%= link_to edit_category_path(category), :class =>"ib" do %>
             <%= image_tag "editar.png", class: "ib sensor" %>
          <% end %>        
        
        </td>
        
        <td>
        
          <%= link_to category, method: :delete, 
              data: { confirm: category.name+' Are you sure?' },
              :remote => true, 
              :class => 'ib delete_category' do
          %>
          
             <%= image_tag "eliminar.png", class: "ib sensor" %>
          <% end %>        
          
        
        </td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>