<h1>Resumes#new</h1>
<p class="label label-info">Find me in app/views/resumes/new.html.erb</p>

<% if !@resume.errors.empty? %>
   <div class = "alert alert-danger blink_me">
      
      
         <% @resume.errors.full_messages.each do |msg| %>
            <%= msg %>
         <% end %>
      
      
   </div>
<% end %>

<div class = "well">
   <%= form_for @resume, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>